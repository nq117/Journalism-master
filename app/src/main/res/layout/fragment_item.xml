<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:focusable="true"
    app:cardBackgroundColor="@color/content_text_size"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/content_text_size">

        <ImageView
            android:id="@+id/fragment_img"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="是的打算"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/fragment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:text="时间"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="大数据的静安寺的回家撒啊实打实接电话就爱上"
                android:textSize="16sp"
                android:textColor="@color/important_text_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>