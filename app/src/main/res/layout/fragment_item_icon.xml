<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    app:cardBackgroundColor="@color/content_text_size"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/content_text_size">

        <TextView
            android:id="@+id/fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            android:textColor="@color/important_text_size"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_img"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/null_icon"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/fragment_img_02"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/null_icon"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/fragment_img_03"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/null_icon"
                android:layout_marginRight="8dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="是的打算"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/fragment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:text="时间"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>